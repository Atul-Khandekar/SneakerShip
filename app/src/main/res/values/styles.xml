<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="navigation_title_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_navigation_active_indicator_style" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">

        <item name="indicatorColor">@color/primary_orange</item>
        <item name="android:activatedBackgroundIndicator">@color/primary_orange</item>
        <item name="indicatorSize">30dp</item>
    </style>

    <style name="text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="price">
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="price_large" parent="price">
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="title_checkout_item">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="subtitle_checkout" parent="title_checkout_item">
        <item name="android:textColor">@color/primary_grey</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_orange</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
        <item name="background">@drawable/shape_orange</item>
    </style>
</resources>